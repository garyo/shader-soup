{
  "name": "evolve-image-gen",
  "version": "0.1.0",
  "description": "WebGPU-based shader evolution platform for generative image processing",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "typecheck": "astro check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,astro}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,astro}\""
  },
  "dependencies": {
    "@astrojs/solid-js": "^5.1.3",
    "astro": "^5.15.8",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/ui": "^4.0.9",
    "eslint": "^9.39.1",
    "eslint-plugin-solid": "^0.14.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "vitest": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}